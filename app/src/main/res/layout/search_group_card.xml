<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="143dp"
    android:orientation="vertical"
    android:id="@+id/search_group_card_linear">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp">

        <ImageView
            android:id="@+id/search_group_group_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="#000000"
            android:layout_marginLeft="16dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/search_group_group_image"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/search_group_groupName_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S.O.P.T 23기"
                android:textSize="18sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="총 회원 "
                    android:textSize="12sp"
                    android:textColor="#8c8c8c"/>

                <TextView
                    android:id="@+id/search_group_totalMember_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="485"
                    android:textSize="12sp"
                    android:textColor="#8c8c8c"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" / 총무 "
                    android:textSize="12sp"
                    android:textColor="#8c8c8c"/>

                <TextView
                    android:id="@+id/search_group_managerName_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="강지희"
                    android:textSize="12sp"
                    android:textColor="#8c8c8c"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/search_group_groupDetail_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="S.O.P.T(Shout Our Passion Together : 솝트, 솦트), 대학생 연합 IT벤처 창업 동아리입니다. 동아리 홈페이지 http://sopt.org"
        android:layout_marginRight="28dp"
        android:layout_marginLeft="21dp"
        android:textSize="14sp"
        android:textColor="#1d1d1d"/>

</LinearLayout>