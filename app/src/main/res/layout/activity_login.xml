<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="org.sopt.kclean.View.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="296dp"
        android:background="#3b3a99" >

        <ImageButton
            android:id="@+id/login_join_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_signup_text"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="18dp"/>

    </RelativeLayout>

    <EditText
        android:id="@+id/login_id_editTxt"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingLeft="10dp"
        android:textColor="#1D1D1D"
        android:hint="아이디(e-mail)를 입력하세요."
        android:fontFamily="@font/notosans_cjk_kr_medium"
        android:includeFontPadding="false"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="42dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/announce_rounded"/>

    <EditText
        android:id="@+id/login_pw_editTxt"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textColor="#1D1D1D"
        android:hint="비밀번호를 입력하세요."
        android:paddingLeft="10dp"
        android:fontFamily="@font/notosans_cjk_kr_medium"
        android:includeFontPadding="false"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="42dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/announce_rounded"/>

    <Button
        android:id="@+id/login_login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="42dp"
        android:background="@drawable/rounded_purple"
        android:text="로그인"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/notosans_cjk_kr_medium"
        android:includeFontPadding="false"
        android:textSize="16sp"
        android:layout_marginTop="16dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10sp">

        <ToggleButton
            android:id="@+id/login_auto_toggleBtn"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:background="@drawable/auto_login_check"
            android:checked="false"
            android:textOn=""
            android:textOff=""/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="자동로그인"
            android:textColor="#707070"
            android:textSize="12sp"
            android:layout_toRightOf="@id/login_auto_toggleBtn"
            android:layout_centerVertical="true"
            android:fontFamily="@font/notosans_cjk_kr_medium"
            android:includeFontPadding="false"
            android:layout_marginLeft="10dp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="64dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="계속 진행하면 모임통장의 "
                android:textSize="11sp"
                android:textColor="#707070"
                android:fontFamily="@font/notosans_cjk_kr_regular"
                android:includeFontPadding="false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="서비스 약관"
                android:textSize="11sp"
                android:textColor="#2e2e2e"
                android:fontFamily="@font/notosans_cjk_kr_medium"
                android:includeFontPadding="false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=", "
                android:textSize="11sp"
                android:textColor="#707070"
                android:fontFamily="@font/notosans_cjk_kr_regular"
                android:includeFontPadding="false"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="개인정보 보호정책"
                android:textSize="11sp"
                android:textColor="#2e2e2e"
                android:fontFamily="@font/notosans_cjk_kr_medium"
                android:includeFontPadding="false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="에 동의한 것으로 간주합니다. "
                android:textSize="11sp"
                android:textColor="#707070"
                android:fontFamily="@font/notosans_cjk_kr_regular"
                android:includeFontPadding="false"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
