<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_style"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">


    <RelativeLayout
        android:id="@+id/bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/astro"
        android:layout_marginTop="-32dp"
        android:background="@drawable/ic_bgimg_dia">

        <TextView
            android:id="@+id/dialog_text"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/notosans_cjk_kr_regular"
            android:includeFontPadding="false"
            android:text="아이디가 입력되지 않았습니다.\n아이디를 입력해주세요."
            android:gravity="center"
            android:textColor="#1D1D1D"
            android:textSize="14sp" />

    </RelativeLayout>

    <Button
        android:id="@+id/notice_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_dia_ok"
        android:layout_below="@id/bg"/>

    <ImageView
        android:id="@+id/astro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_astro_70"
        android:background="@android:color/transparent"/>

</RelativeLayout>
