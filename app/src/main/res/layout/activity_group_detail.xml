<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".View.GroupDetailActivity">

    <TextView
        android:id="@+id/group_detail_groupName_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="S.O.P.T 23기"
        android:textSize="24sp"
        android:layout_marginTop="19dp"
        android:layout_marginLeft="16dp"/>

    <LinearLayout
        android:id="@+id/group_detail_button_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/group_detail_groupName_text">

        <Button
            android:id="@+id/group_detail_schedule_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/group_detail_finance_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/group_detail_member_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/group_detail_board_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <ImageView
        android:id="@+id/group_detail_groupBackground_image"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:background="#000000"
        android:layout_below="@+id/group_detail_button_linear"/>

    <RelativeLayout
        android:id="@+id/group_detail_groupExplain_relative"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:orientation="horizontal"
        android:layout_below="@+id/group_detail_groupBackground_image">

        <ImageView
            android:id="@+id/group_detail_group_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:background="#000000"/>

        <TextView
            android:id="@+id/group_detail_groupDetail_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S.O.P.T(Shout Our Passion Together) 대학생 연합 IT벤처 창업 동아리입니다. "
            android:background="@drawable/rounded"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="16dp"
            android:layout_toRightOf="@id/group_detail_group_image"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            android:paddingTop="6dp"
            android:paddingLeft="12dp"
            android:paddingBottom="6dp"
            android:paddingRight="42dp"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/group_detail_coming_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="18dp"
        android:layout_below="@+id/group_detail_groupExplain_relative">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="다가오는 일정"
            android:textSize="16sp"
            android:textColor="#1d1d1d"/>

        <ImageView
            android:layout_width="9dp"
            android:layout_height="9dp"
            android:background="#a96ddb"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/group_detail_coming_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/group_detail_coming_linear"
        android:layout_marginTop="11dp">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/group_detail_notice_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="18dp"
        android:layout_below="@+id/group_detail_coming_recycler_view">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="공지사항"
            android:textSize="16sp"
            android:textColor="#1d1d1d"/>

        <ImageView
            android:layout_width="9dp"
            android:layout_height="9dp"
            android:background="#0065bb"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/group_detail_notice_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/group_detail_notice_linear"
        android:layout_marginTop="11dp">

    </android.support.v7.widget.RecyclerView>
    
    <Button
        android:id="@+id/group_detail_join_button"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#ff5050"
        android:text="가입하기"
        android:textColor="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:visibility="gone"/>

</RelativeLayout>