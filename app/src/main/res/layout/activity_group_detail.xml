<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".View.GroupDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/group_detail_groupName_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S.O.P.T 23기"
            android:textSize="24sp"
            android:layout_marginTop="19dp"
            android:layout_marginLeft="16dp"
            android:fontFamily="@font/notosans_cjk_kr_bold"
            android:textColor="#1D1D1D"
            android:includeFontPadding="false"/>

        <LinearLayout
            android:id="@+id/group_detail_button_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="23dp">

            <ImageButton
                android:id="@+id/group_detail_announce_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_detail_notice"/>

            <ImageButton
                android:id="@+id/group_detail_finance_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_detail_wallet_name"
                android:layout_marginLeft="23dp"/>

            <ImageButton
                android:id="@+id/group_detail_board_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_detail_board"
                android:layout_marginLeft="23dp"/>

            <ImageButton
                android:id="@+id/group_detail_member_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_detail_user"
                android:layout_marginLeft="23dp"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/group_detail_groupBackground_image"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:background="#000000"
            android:layout_marginTop="10dp"/>

        <RelativeLayout
            android:id="@+id/group_detail_groupExplain_relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/group_detail_group_circleImage"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"/>

            <ImageView
                android:id="@+id/kkodari"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/group_detail_group_circleImage"
                android:src="@drawable/ic_kodari"
                android:layout_marginLeft="10.4dp"/>

            <TextView
                android:id="@+id/group_detail_groupDetail_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S.O.P.T(Shout Our Passion Together) 대학생 연합 IT벤처 창업 동아리입니다."
                android:textSize="12sp"
                android:textColor="#1D1D1D"
                android:fontFamily="@font/notosans_cjk_kr_medium"
                android:background="@drawable/rounded"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="16dp"
                android:layout_toRightOf="@id/kkodari"
                android:layout_centerVertical="true"
                android:paddingTop="6dp"
                android:paddingLeft="12dp"
                android:paddingBottom="6dp"
                android:paddingRight="42dp"
                android:includeFontPadding="false"/>

        </RelativeLayout>

        <!-- 다가오는 일정 -->
        <TextView
            android:id="@+id/group_detail_coming_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="다가오는 일정"
            android:textSize="16sp"
            android:textColor="#1d1d1d"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="18dp"
            android:fontFamily="@font/notosans_cjk_kr_bold"
            android:includeFontPadding="false"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/announce_rounded">

            <LinearLayout
                android:id="@+id/circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/ic_circle_56"
                android:layout_centerVertical="true"
                android:layout_marginLeft="9dp">

                <TextView
                    android:id="@+id/group_detail_comingDay_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13"
                    android:textColor="#1D1D1D"
                    android:textSize="22sp"
                    android:fontFamily="@font/notosans_cjk_kr_medium"
                    android:includeFontPadding="false"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@+id/group_detail_comingMonth_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11"
                        android:textColor="#8C8C8C"
                        android:textSize="11sp"
                        android:fontFamily="@font/notosans_cjk_kr_medium"
                        android:includeFontPadding="false"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="월"
                        android:textSize="11sp"
                        android:textColor="#8C8C8C"
                        android:fontFamily="@font/notosans_cjk_kr_medium"
                        android:includeFontPadding="false"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toRightOf="@id/circle"
                android:layout_marginTop="16.5dp"
                android:layout_marginLeft="8dp">

                <TextView
                    android:id="@+id/group_detail_comingTitle_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="컨퍼런스"
                    android:textColor="#1D1D1D"
                    android:textSize="14sp"
                    android:fontFamily="@font/notosans_cjk_kr_medium"
                    android:includeFontPadding="false"/>

                <TextView
                    android:id="@+id/group_detail_comingTime_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="오후 1:00 ~ 오후 7:00"
                    android:textSize="12sp"
                    android:textColor="#8C8C8C"
                    android:fontFamily="@font/notosans_cjk_kr_medium"
                    android:includeFontPadding="false"/>

            </LinearLayout>

        </RelativeLayout>


        <!-- 최신 공지 -->
        <TextView
            android:id="@+id/group_detail_totalNotice_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="최신 공지"
            android:textSize="16sp"
            android:textColor="#1d1d1d"
            android:fontFamily="@font/notosans_cjk_kr_bold"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="18dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:orientation="vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/announce_rounded">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp">

                <ImageView
                    android:id="@+id/group_detail_type_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_normal_notice"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true">

                    <TextView
                        android:id="@+id/group_detail_announceDate_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11/03"
                        android:textColor="#8c8c8c"
                        android:textSize="12sp"
                        android:fontFamily="@font/notosans_cjk_kr_medium"
                        android:includeFontPadding="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" "
                        android:textColor="#8c8c8c"
                        android:textSize="12sp"
                        android:fontFamily="@font/notosans_cjk_kr_medium"
                        android:includeFontPadding="true"/>

                    <TextView
                        android:id="@+id/group_detail_announceTime_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="18:30"
                        android:textColor="#8c8c8c"
                        android:textSize="12sp"
                        android:fontFamily="@font/notosans_cjk_kr_medium"
                        android:includeFontPadding="true"/>

                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/group_detail_announceTitle_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="컨퍼런스 기획단 모집"
                android:fontFamily="@font/notosans_cjk_kr_bold"
                android:includeFontPadding="false"
                android:textSize="14sp"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/group_detail_announceContent_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="컨퍼런스 기획단 모집합니다. 기획/디자인 관심있는 분들 많은 지원 부탁드립니다 화이팅이에용..."
                android:textSize="14sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/notosans_cjk_kr_regular"
                android:includeFontPadding="false"/>

        </LinearLayout>

        <!-- 최신 게시물 -->
        <TextView
            android:id="@+id/group_detail_board_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="최신 게시물"
            android:textSize="16sp"
            android:textColor="#1d1d1d"
            android:fontFamily="@font/notosans_cjk_kr_bold"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="18dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:orientation="vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/announce_rounded"
            android:layout_marginTop="11dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/group_detail_memberImg_circleImg1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_profile_40"
                    android:layout_marginLeft="10dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toRightOf="@id/group_detail_memberImg_circleImg1"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp">

                    <TextView
                        android:id="@+id/group_detail_writer_text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="구설원"
                        android:textSize="14sp"
                        android:fontFamily="@font/notosans_cjk_kr_medium"
                        android:includeFontPadding="false"
                        android:textColor="#1D1D1D" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/group_detail_date_text1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="11/03"
                            android:textColor="#8c8c8c"
                            android:textSize="12sp"
                            android:fontFamily="@font/notosans_cjk_kr_regular"
                            android:includeFontPadding="false"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" "
                            android:textColor="#8c8c8c"
                            android:textSize="12sp"
                            android:fontFamily="@font/notosans_cjk_kr_regular"
                            android:includeFontPadding="false"/>

                        <TextView
                            android:id="@+id/group_detail_time_text1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="18:30"
                            android:textColor="#8c8c8c"
                            android:textSize="12sp"
                            android:fontFamily="@font/notosans_cjk_kr_regular"
                            android:includeFontPadding="false"/>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/group_detail_content_text1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="컨퍼런스 후기 올립니다 ! 덕분에 즐겁고 보람찬 경험 많이 할수 있었습니다. 다음에도 또 이런 행사 열어주세요!"
                android:textSize="14sp"
                android:textColor="#1D1D1D"
                android:fontFamily="@font/notosans_cjk_kr_regular"
                android:includeFontPadding="false"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:id="@+id/group_detail_commentNumber_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textSize="12sp"
                    android:textColor="#1D1D1D"
                    android:fontFamily="@font/notosans_cjk_kr_regular"
                    android:includeFontPadding="false"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"/>

                <TextView
                    android:id="@+id/group_detail_likeNumber_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22"
                    android:textSize="12sp"
                    android:textColor="#1D1D1D"
                    android:fontFamily="@font/notosans_cjk_kr_regular"
                    android:includeFontPadding="false"
                    android:layout_marginRight="19.5dp"/>

                <LinearLayout
                    android:id="@+id/group_detail_photo_linear1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/group_detail_photoNumber_text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:textSize="12sp"
                        android:textColor="#1D1D1D"
                        android:fontFamily="@font/notosans_cjk_kr_regular"
                        android:includeFontPadding="false"
                        android:layout_marginRight="10dp" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:orientation="vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/announce_rounded"
            android:layout_marginTop="11dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/group_detail_memberImg_circleImg2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_profile_40"
                    android:layout_marginLeft="10dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toRightOf="@id/group_detail_memberImg_circleImg2"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp">

                    <TextView
                        android:id="@+id/group_detail_writer_text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="구설원"
                        android:textSize="14sp"
                        android:fontFamily="@font/notosans_cjk_kr_medium"
                        android:includeFontPadding="false"
                        android:textColor="#1D1D1D" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/group_detail_date_text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="11/03"
                            android:textColor="#8c8c8c"
                            android:textSize="12sp"
                            android:fontFamily="@font/notosans_cjk_kr_regular"
                            android:includeFontPadding="false"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" "
                            android:textColor="#8c8c8c"
                            android:textSize="12sp"
                            android:fontFamily="@font/notosans_cjk_kr_regular"
                            android:includeFontPadding="false"/>

                        <TextView
                            android:id="@+id/group_detail_time_text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="18:30"
                            android:textColor="#8c8c8c"
                            android:textSize="12sp"
                            android:fontFamily="@font/notosans_cjk_kr_regular"
                            android:includeFontPadding="false"/>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/group_detail_content_text2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="컨퍼런스 후기 올립니다 ! 덕분에 즐겁고 보람찬 경험 많이 할수 있었습니다. 다음에도 또 이런 행사 열어주세요!"
                android:textSize="14sp"
                android:textColor="#1D1D1D"
                android:fontFamily="@font/notosans_cjk_kr_regular"
                android:includeFontPadding="false"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:id="@+id/group_detail_commentNumber_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textSize="12sp"
                    android:textColor="#1D1D1D"
                    android:fontFamily="@font/notosans_cjk_kr_regular"
                    android:includeFontPadding="false"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"/>

                <TextView
                    android:id="@+id/group_detail_likeNumber_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22"
                    android:textSize="12sp"
                    android:textColor="#1D1D1D"
                    android:fontFamily="@font/notosans_cjk_kr_regular"
                    android:includeFontPadding="false"
                    android:layout_marginRight="19.5dp"/>

                <LinearLayout
                    android:id="@+id/group_detail_photo_linear2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/group_detail_photoNumber_text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:textSize="12sp"
                        android:textColor="#1D1D1D"
                        android:fontFamily="@font/notosans_cjk_kr_regular"
                        android:includeFontPadding="false"
                        android:layout_marginRight="10dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- 가입된 동아리가 아닐 경우 나타나는 가입하기 버튼-->
        <Button
            android:id="@+id/group_detail_join_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#ff5050"
            android:text="가입하기"
            android:textColor="#FFFFFF"/>

    </LinearLayout>
</ScrollView>