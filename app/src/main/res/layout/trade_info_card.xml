<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/trade_info_card_relative"
    android:layout_width="match_parent"
    android:layout_height="71dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/trade_info_group_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:background="#000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/trade_info_group_image"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="45dp"
        android:layout_toLeftOf="@id/trade_info_money_linear">

        <TextView
            android:id="@+id/trade_info_tradeName_txt"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textSize="14sp"
            android:text="서울시 행복 돼지고기 집인데용 아주 맛있어용 히히"/>

        <TextView
            android:id="@+id/trade_info_tradeTime_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13:08"
            android:textColor="#8c8c8c"
            android:textSize="12sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/trade_info_money_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="18dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/trade_info_isPlus_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="18sp"
                android:textColor="#ff5050"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "
                android:textSize="18sp"
                android:textColor="#ff5050"/>

            <TextView
                android:id="@+id/trade_info_tradePrice_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25,000"
                android:textSize="18sp"
                android:textColor="#ff5050"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="원"
                android:textColor="#ff5050"
                android:textSize="12sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/trade_info_isIncome_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="결제"
            android:layout_gravity="right"
            android:textSize="12sp"
            android:textColor="#ff5050"/>
    </LinearLayout>

</RelativeLayout>