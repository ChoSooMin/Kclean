<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".View.SendMoneyActivity"
    android:background="#3b3a99">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/close_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_expand_close"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="25dp"
            android:layout_marginRight="25dp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="460dp"
        android:background="@drawable/rounded"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/send_money_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10주년 기념 컨퍼런스"
                android:fontFamily="@font/notosans_cjk_kr_medium"
                android:includeFontPadding="false"
                android:textColor="#1D1D1D"
                android:textSize="18sp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="30dp"/>

            <ImageView
                android:id="@+id/send_money_type_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="16dp"
                android:layout_marginTop="32dp"
                android:src="@drawable/ic_special_notice"/>

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_dot_line_360"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="17dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/send_money_profileImg"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_profile_40"
                android:layout_marginLeft="16dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_toRightOf="@id/send_money_profileImg"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="총무 "
                    android:textColor="#1D1D1D"
                    android:textSize="14sp"
                    android:fontFamily="@font/notosans_cjk_kr_medium"
                    android:includeFontPadding="false"/>

                <TextView
                    android:id="@+id/send_money_managerName_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="김리브"
                    android:textSize="14sp"
                    android:textColor="#1D1D1D"
                    android:fontFamily="@font/notosans_cjk_kr_medium"
                    android:includeFontPadding="false"/>

            </LinearLayout>

            <TextView
                android:id="@+id/send_money_writeTime_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="16dp"
                android:layout_centerInParent="true"
                android:text="11/13 13:05"
                android:textSize="12sp"
                android:textColor="#8C8C8C"
                android:fontFamily="@font/notosans_cjk_kr_regular"
                android:includeFontPadding="false"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="날짜"
                android:textColor="#3b3a99"
                android:textSize="12sp"
                android:fontFamily="@font/notosans_cjk_kr_medium"
                android:includeFontPadding="false"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/send_money_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018.12.2"
                android:textSize="14sp"
                android:textColor="#1D1D1D"
                android:layout_toRightOf="@id/date"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시간"
                android:textColor="#3b3a99"
                android:textSize="12sp"
                android:fontFamily="@font/notosans_cjk_kr_medium"
                android:includeFontPadding="false"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/send_money_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/time"
                android:text="14:00~18:00"
                android:textColor="#1D1D1D"
                android:textSize="14sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="장소"
                android:textColor="#3b3a99"
                android:textSize="12sp"
                android:fontFamily="@font/notosans_cjk_kr_medium"
                android:includeFontPadding="false"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/send_money_place_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/place"
                android:text="리브홀"
                android:textColor="#1D1D1D"
                android:textSize="14sp" />

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_dot_line_360"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="10dp"
            android:text="내용"
            android:textColor="#3b3a99"
            android:textSize="12sp"
            android:fontFamily="@font/notosans_cjk_kr_medium"
            android:includeFontPadding="false" />

        <TextView
            android:id="@+id/send_money_content_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="93dp"
            android:text="10주년 기념 컨퍼런스에 참여해주세요!"
            android:layout_marginTop="5dp"
            android:textColor="#1D1D1D"
            android:textSize="14sp"
            android:fontFamily="@font/notosans_cjk_kr_regular"
            android:includeFontPadding="false"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_dot_line_360"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="10dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="금액"
                android:textSize="14sp"
                android:textColor="#1D1D1D"
                android:fontFamily="@font/notosans_cjk_kr_medium"
                android:includeFontPadding="false"
                android:layout_marginLeft="26dp"
                android:layout_centerVertical="true"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_coin_36"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/send_money_money_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10,000"
                    android:textColor="#1D1D1D"
                    android:textSize="22sp"
                    android:fontFamily="@font/notosans_cjk_kr_bold"
                    android:includeFontPadding="false"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="원"
                    android:textSize="14sp"
                    android:textColor="#1D1D1D"
                    android:fontFamily="@font/notosans_cjk_kr_medium"
                    android:includeFontPadding="false"
                    android:layout_gravity="center"/>

            </LinearLayout>

        </RelativeLayout>

        <Button
            android:id="@+id/send_money_send_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="45dp"
            android:background="@drawable/rounded_purple_songsong"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:text="송금하기"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/notosans_cjk_kr_medium"
            android:includeFontPadding="false"/>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/img_bg_107"
        android:scaleType="centerCrop"
        android:layout_weight="1"/>

</LinearLayout>