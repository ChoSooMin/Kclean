<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id = "@+id/group_card_linear"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

    <ImageView
        android:id="@+id/group_card_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="15dp"
        android:background="#000000"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/group_card_group_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S.O.P.T 23기"
            android:textSize="18sp"
            android:textStyle="bold"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="총 회원 "
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/group_card_totalnumber_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="484"
                android:textSize="17sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" / "
                android:textSize="17sp"/>


            <TextView
                android:id="@+id/group_card_grade_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="회장 "
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/group_card_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="류지훈"
                android:textSize="17sp"/>

        </LinearLayout>




    </LinearLayout>


</LinearLayout>